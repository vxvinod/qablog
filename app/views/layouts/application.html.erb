<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title)%></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<div id="container">
	<div id="header">
		<%= link_to 'Make it snappy Q&A',root_path%>
	</div><!-- end header-->
	<div id="nav">
		<ul>
			<li>
				<%= link_to 'Home',root_path%>
			</li>
		</ul>
	</div><!--end nav -->
	<div id ="content">
		<%= flash.each do |key,value| %>
		<p id="message"><%=value%></p>
		<%end%>
		<%= yield %>
	</div><!--end content-->
	<div id="footer">
		&copy: Make it snappy Q&A <%=Date.today.year%>
	</div><!--end footer-->
</div><!--end container-->

</body>
</html>
